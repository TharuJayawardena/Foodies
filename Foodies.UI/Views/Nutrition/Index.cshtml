@model NutritionViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Nutrition</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Nutrition List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Nutrition" asp-action="Create" class="btn btn-primary">
                <i class="bg-info bi-plus-circle"></i> &nbsp; Create New Nutrition 
            </a>
        </div>
    </div>
    <br/><br/>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Created At
                </th>
                <th>
                    Modified At
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nutrition in Model.Nutritions)
            {
                <tr>
                    <td>@nutrition.Name</td>
                    <td>@nutrition.Description</td>
                    <td>@nutrition.CreatedAt</td>
                    <td>@nutrition.ModifiedAt</td>
                </tr>
            }
            
        </tbody>
    </table>
</div>

